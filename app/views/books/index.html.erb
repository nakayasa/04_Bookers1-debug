<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book %></td><!--ローカル変数のbookで/idまで含んでおり探してきてくれる。book_pathを使う場合は（book）でidの指定が必要-->
        <td><%= link_to 'Edit', edit_book_path(book) %></td> <!--bookの中にidの情報もあるからedit_book_pathで探してきてくれる。book.idでも可-->
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<h2>New book</h2>
<%= render 'form', book: @book %>
